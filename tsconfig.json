{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "target": "es6",
    "lib": [
      "esnext",
      "dom",
      "es2019",
      "es5",
      "es6"
    ],
    "incremental": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "build",
    "baseUrl": ".",
    "paths": {
      "app/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}